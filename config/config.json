{

    "view engines": {

    },

    "express": {
        "env": "", // NOTE: `env` is managed by the framework. This value will be overwritten.
        "x-powered-by": false,
        "trust proxy": false,
        "jsonp callback name": null,
        "json replacer": null,
        "json spaces": 0,
        "case sensitive routing": false,
        "strict routing": false,
        "view cache": true,
        "view engine": null,
        "views": "path:./views",
        "mountpath": "/"
    },

    "middleware": {

        "shutdown": {
            "enabled": true,
            "priority": 0,
            "module": "kraken-js/middleware/shutdown",
            "arguments": [{
                "timeout": 30000,
                "template": null
            }]
        },

        "compress": {
            "enabled": false,
            "priority": 10,
            "module": "compression"
        },

        "favicon": {
            "enabled": true,
            "priority": 30,
            "module": "static-favicon",
            "arguments": [ "path:./public/favicon.ico" ]
        },

        "static": {
            "enabled": true,
            "priority": 40,
            "module": "serve-static",
            "arguments": [ "path:./public" ]
        },

        "logger": {
            "enabled": true,
            "priority": 50,
            "module": "morgan"
        },

        "json": {
            "enabled": true,
            "priority": 60,
            "module": "body-parser",
            "factoryMethod": "json"
        },

        "urlencoded": {
            "enabled": true,
            "priority": 70,
            "module": "body-parser",
            "factoryMethod": "urlencoded"
        },

        "multipart": {
            "enabled": true,
            "priority": 80,
            "module": "kraken-js/middleware/multipart"
        },

        "cookieParser": {
            "enabled": true,
            "priority": 90,
            "module": "cookie-parser",
            "arguments": [ "keyboard cat" ]
        },

        "session": {
            "enabled": true,
            "priority": 100,
            "module": "express-session",
            "arguments": [
                {
                    "key": "",
                    "secret": "keyboard cat",
                    "cookie": {
                        "path": "/",
                        "httpOnly": true,
                        "maxAge": null
                    },
                    "proxy": null
                }
            ]
        },

        "appsec": {
            "enabled": true,
            "priority": 110,
            "module": "lusca",
            "arguments": [
                {
                    "csrf": true,
                    "xframe": "SAMEORIGIN",
                    "p3p": false,
                    "csp": false
                }
            ]
        },

        "router": {
            "enabled": true,
            "priority": 120,
            "module": "express-enrouten",
            "arguments": [
                {
                    "index": "path:./routes"
                }
            ]
        }

    }
}
